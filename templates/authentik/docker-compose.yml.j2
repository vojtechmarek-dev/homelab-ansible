version: "3.8"

services:
  postgresql:
    image: docker.io/library/postgres:16-alpine
    restart: unless-stopped
    healthcheck:
      interval: 30s
      retries: 5
      start_period: 20s
      test: ["CMD-SHELL", "pg_isready -d $${POSTGRES_DB} -U $${POSTGRES_USER}"]
      timeout: 5s
    volumes:
      - {{ db_path }}:/var/lib/postgresql/data
    environment:
      POSTGRES_PASSWORD: {{ secrets.authentik_db_password }}
      POSTGRES_USER: authentik
      POSTGRES_DB: authentik
    networks:
      - authentik_internal

  server:
    image: ghcr.io/goauthentik/server:2025.10.3
    restart: unless-stopped
    command: server
    environment:
      AUTHENTIK_POSTGRESQL__HOST: postgresql
      AUTHENTIK_POSTGRESQL__NAME: authentik
      AUTHENTIK_POSTGRESQL__USER: authentik
      AUTHENTIK_POSTGRESQL__PASSWORD: {{ secrets.authentik_db_password }}
      AUTHENTIK_SECRET_KEY: {{ secrets.authentik_secret_key }}
    volumes:
      - {{ config_path }}/media:/media
      - {{ config_path }}/custom-templates:/templates
    ports:
      - "9000:9000"
      - "9443:9443"
    depends_on:
      postgresql:
        condition: service_healthy
    networks:
      - authentik_internal
      - proxy # Connect to Caddy

  worker:
    image: ghcr.io/goauthentik/server:2025.10.3
    restart: unless-stopped
    command: worker
    environment:
      AUTHENTIK_POSTGRESQL__HOST: postgresql
      AUTHENTIK_POSTGRESQL__NAME: authentik
      AUTHENTIK_POSTGRESQL__USER: authentik
      AUTHENTIK_POSTGRESQL__PASSWORD: {{ secrets.authentik_db_password }}
      AUTHENTIK_SECRET_KEY: {{ secrets.authentik_secret_key }}
    user: root
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ config_path }}/media:/media
      - {{ config_path }}/certs:/certs
      - {{ config_path }}/custom-templates:/templates
    depends_on:
      postgresql:
        condition: service_healthy
    networks:
      - authentik_internal

networks:
  authentik_internal:
  proxy:
    external: true