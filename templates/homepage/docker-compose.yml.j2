services:
  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    volumes:
      - {{ config_path }}:/app/config
      - {{ images_path }}:/app/public/images
      - /var/run/docker.sock:/var/run/docker.sock:ro # To see Docker stats
    environment:
      # This is the required security setting
      HOMEPAGE_ALLOWED_HOSTS: zen132.cz
    restart: unless-stopped
    networks:
      - proxy

networks:
  proxy:
    external: true